{
  "name": "openclaw-bullybuddy",
  "version": "0.1.0",
  "description": "Claude Code session manager - spawn, group, and monitor multiple Claude Code instances from a web dashboard or CLI",
  "type": "module",
  "license": "MIT",
  "author": "CK Sun",
  "keywords": [
    "claude",
    "claude-code",
    "session-manager",
    "terminal",
    "pty",
    "dashboard",
    "ai"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ChenKuanSun/openclaw-bullybuddy.git"
  },
  "homepage": "https://github.com/ChenKuanSun/openclaw-bullybuddy#readme",
  "bugs": {
    "url": "https://github.com/ChenKuanSun/openclaw-bullybuddy/issues"
  },
  "bin": {
    "bullybuddy": "./bin/bullybuddy.js"
  },
  "files": [
    "bin/",
    "dist-server/",
    "dist-dashboard/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "dev": "concurrently -n server,dashboard \"npm run dev:server\" \"npm run dev:dashboard\"",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:dashboard": "vite src/dashboard",
    "build": "tsc -p tsconfig.server.json && vite build",
    "start": "node dist-server/server/index.js",
    "typecheck": "tsc -p tsconfig.server.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "node-pty": "1.0.0",
    "open": "^10.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/three": "^0.182.0",
    "@types/ws": "^8.5.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "concurrently": "^9.1.0",
    "three": "^0.182.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
